<%- include('partials/header.ejs') %>

<body>


    <div class="container">

        <select id="countrypicker" onchange="catchD()" class="selectpicker countrypicker mt-5"
            data-default="BR"></select>

        <!--Card do gráfico-->
        <div class="card mt-2" style="background-color: #373757; border-radius: 10px;">
            <div class="card-body">

                <img id="img-pais" width="64px" height="64px" src="https://www.countryflags.io/br/flat/64.png"
                    class="float-right">

                <canvas id="myChart" class="mt-5"></canvas>

            </div>

            <div class="card-footer text-muted text-center">
                <p style="color: white;">Fique em quarentena, tome cuidado e não saia de casa pela sua própria saúde
                    ~Micael</p>
                <a style="color: white; text-decoration: none;" href="https://twitter.com/MicaelEffects"><i class="fab fa-twitter ml-3 mt-2"></i></a>
                <a href="https://github.com/Micazera"><i class="fab fa-github"></i></a>
                <a href="https://instagram.com/micagomes.js/"><i class="fab fa-instagram"></i></a>
            </div>
        </div>

        <!--Toast caso aconteça algum erro-->
        <div id="toasthome" class="toast mt-3 mr-3" role="alert" aria-live="assertive" aria-atomic="true"
            data-delay="5000" data-autohide="true" style="position: absolute; top: 0; right: 0;">

            <div class="toast-header bg-danger">
                <strong class="mr-auto text-white">Lamentamos, ocorreu um erro.</strong>
                <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>

            </div>
            <div class="toast-body">
                Este país não possui dados informados.
            </div>
        </div>

    </div>
</body>
<%- include('partials/footer.ejs') %>